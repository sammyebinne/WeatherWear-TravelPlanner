<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="698.0" prefWidth="439.0" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.controller.MainController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label text="Enter Your Destination City:" />
    <TextField fx:id="cityTextField" />
    <Button onAction="#handleUserRequest" text="Get Weather" />
    <Label text="Weather Forecast for the Next 7 Days:" />
    
    <MenuButton fx:id="dayMenuButton" text="Select Day">
        <items>
            <MenuItem text="Day 1" onAction="#handleDaySelection" />
            <MenuItem text="Day 2" onAction="#handleDaySelection" />
            <MenuItem text="Day 3" onAction="#handleDaySelection" />
            <MenuItem text="Day 4" onAction="#handleDaySelection" />
            <MenuItem text="Day 5" onAction="#handleDaySelection" />
            <MenuItem text="Day 6" onAction="#handleDaySelection" />
            <MenuItem text="Day 7" onAction="#handleDaySelection" />
        </items>
    </MenuButton>
    
    <Label fx:id="dateLabel" text="Weather Conditions for " />

    <HBox spacing="10">
        <ImageView fx:id="weatherIcon" fitHeight="100.0" fitWidth="100.0" />
        <VBox spacing="5">
            <HBox spacing="5">
                <ImageView fx:id="temperatureIcon" fitHeight="20.0" fitWidth="20.0" />
                <Label text="Temperature:" />
                <Label fx:id="temperatureLabel" />
            </HBox>
            <HBox spacing="5">
                <ImageView fx:id="humidityIcon" fitHeight="20.0" fitWidth="20.0" />
                <Label text="Humidity:" />
                <Label fx:id="humidityLabel" />
            </HBox>
            <HBox spacing="5">
                <ImageView fx:id="windIcon" fitHeight="20.0" fitWidth="20.0" />
                <Label text="Wind Speed:" />
                <Label fx:id="windLabel" />
            </HBox>
        </VBox>
    </HBox>

    <Label text="Clothing Recommendations:" />
    <Label fx:id="recommendationsLabel" wrapText="true" />

    <opaqueInsets>
        <Insets bottom="20.0" right="20.0" top="20.0" />
    </opaqueInsets> 
</VBox>